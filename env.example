# Agent Token from platform (required)
# IMPORTANT: Each agent has its own unique token
# Get this token when creating an agent in your User Cabinet
# This token is shown only once - save it!
AGENT_TOKEN=

# Agent HTTP port (the port the agent listens on)
# Platform will connect to this agent on this port
AGENT_PORT=3001

# Runtime mode: auto, docker, or system
RUNTIME=auto

# Base path for deployments
DEPLOY_PATH=/var/www/sites

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Nginx config path (for system runtime)
NGINX_CONFIG_PATH=/etc/nginx/sites-available

# Nginx sites-enabled path (for system runtime)
NGINX_SITES_ENABLED=/etc/nginx/sites-enabled

# Docker network name (for docker runtime)
DOCKER_NETWORK=sirka-network

